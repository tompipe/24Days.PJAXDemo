@inherits PjaxDemo.App_Code.PjaxTemplatePage
@{
    Layout = "SiteDesign.cshtml";
}

@if (IsPjaxRequest)
{
    @RenderView()
}
else
{
    @section Metadata { @RenderSection("Metadata", false) }

    @section Breadcrumb { <!-- no breadcrumb --> }

    @RenderView()

    @section Footer { @RenderSection("Footer", false) }
}

@helper RenderView()
{
    @section PageHeader { @RenderSection("PageHeader", false) }

    @RenderBody()
}